{
  "name": "jest-auto-shard",
  "version": "1.0.0",
  "description": "Automatic test sharding for Jest with zero configuration. Intelligently distributes tests across multiple runners and merges coverage reports seamlessly.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jest-shard": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage coverage-shards coverage-final",
    "prepare": "npm run build",
    "test": "jest",
    "test:shard": "npm run test:shard:1 && npm run test:shard:2 && npm run merge:coverage",
    "test:shard:1": "JEST_TOTAL_SHARDS=2 JEST_SHARD_INDEX=1 jest --shard=1/2",
    "test:shard:2": "JEST_TOTAL_SHARDS=2 JEST_SHARD_INDEX=2 jest --shard=2/2",
    "merge:coverage": "JEST_MERGE_COVERAGE=true node -e \"require('./dist').mergeCoverageReports()\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "jest",
    "test",
    "testing",
    "shard",
    "sharding",
    "parallel",
    "automatic",
    "zero-config",
    "coverage",
    "merge",
    "reporter",
    "ci-cd",
    "performance",
    "optimization",
    "distribution",
    "runner"
  ],
  "author": "Jared Leonard <jmaleonard@github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmaleonard/jest-auto-shard.git"
  },
  "bugs": {
    "url": "https://github.com/jmaleonard/jest-auto-shard/issues"
  },
  "homepage": "https://github.com/jmaleonard/jest-auto-shard#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "@jest/reporters": ">=27.0.0",
    "@jest/types": ">=27.0.0",
    "jest": ">=27.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.6"
  },
  "devDependencies": {
    "@jest/reporters": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/glob": "^8.1.0",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}